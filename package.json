{
  "name": "mdtags",
  "displayName": "mdtags",
  "description": "Tags support for markdown files",
  "version": "0.0.5",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/crazafimahatratra/mdtags.git"
  },
  "bugs": {
    "url": "https://github.com/crazafimahatratra/mdtags/issues",
    "email": "rhisty@gmail.com"
  },
  "publisher": "Chraz",
  "engines": {
    "vscode": "^1.86.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [{
      "command": "mdtags.refresh",
      "title": "Md Tags: Refresh tags",
      "icon": "$(refresh)"
    }],
    "views": {
      "mdTagsExplorer": [
        {
          "id": "mdtags",
          "name": "Markdown Tags"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "mdtags.refresh",
          "when": "view == mdtags",
          "group": "navigation"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [{
        "id": "mdTagsExplorer",
        "title": "Markdown Tags",
        "icon": "$(type-hierarchy)"
      }]
    },
    "configuration":[
      {
        "title": "MDTags",
        "properties": {
          "MDTags.rootFolder": {
            "type": "string",
            "default": "",
            "description": "Path for reading the markdown files. (The path is relative to workspace folder)"
          }, 
          "MDTags.exclude": {
            "type": "string",
            "default": "**/{node_modules,vendor}/**",
            "description": "Paths to be excluded. Supports glob pattern"
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "pretest": "rm -rf out",
    "test": "jest"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.86.0",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "@vscode/test-cli": "^0.0.6",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  }
}